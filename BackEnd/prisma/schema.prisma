generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Player {
  id           Int     @id @default(autoincrement())
  name         String
  birthday     String  
  nationality  String
  position     String
  teamId       Int?    // FK opcional para Times

  time         Team? @relation(fields: [teamId], references: [id])

  Estatistic Estatistic[]

  Contract Contract[]
}

model Team {
  id          Int       @id @default(autoincrement())
  name        String
  country     String
  foundation  String

  jogadores   Player[]

  Estatistic Estatistic[]

  Contract Contract[]
}

model Estatistic {
  id          Int      @id @default(autoincrement())
  playerId    Int?
  teamId      Int?
  goals       Int
  assists     Int
  matches     Int

  jogador     Player? @relation(fields: [playerId], references: [id])
  time        Team? @relation(fields: [teamId], references: [id])
}

model Contract {
  id          Int      @id @default(autoincrement())
  playerId    Int
  teamId      Int
  startDate   String
  endDate     String

  player      Player @relation(fields: [playerId], references: [id])
  team        Team @relation(fields: [teamId], references: [id])
}
