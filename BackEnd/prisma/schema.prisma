generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Position {
  GOLEIRO
  ZAGUEIRO
  LATERAL_ESQUERDO
  LATERAL_DIREITO
  MEIO_CAMPO
  ATACANTE
}

model Nacionalidade {
  id    Int     @id @default(autoincrement())
  nome  String

  jogadores Player[]
  times     Team[]
}

model Player {
  id              Int           @id @default(autoincrement())
  name            String
  birthday        String
  position        Position
  nacionalidadeId Int

  nacionalidade   Nacionalidade @relation(fields: [nacionalidadeId], references: [id])

  Estatistic      Estatistic[]
  Contract        Contract[]
}

model Team {
  id              Int           @id @default(autoincrement())
  name            String
  country         String
  foundation      String
  nacionalidadeId Int

  nacionalidade   Nacionalidade @relation(fields: [nacionalidadeId], references: [id])
  Estatistic      Estatistic[]
  Contract        Contract[]
}

model Contract {
  id         Int     @id @default(autoincrement())
  playerId   Int
  teamId     Int
  startDate  String
  endDate    String

  player     Player  @relation(fields: [playerId], references: [id])
  team       Team    @relation(fields: [teamId], references: [id])

  @@unique([playerId, startDate])
}

model Estatistic {
  id                 Int     @id @default(autoincrement())
  playerId           Int
  teamId             Int
  contractStartDate  String
  contractEndDate    String   
  goals              Int
  assists            Int
  matches            Int

  jogador            Player @relation(fields: [playerId], references: [id])
  time               Team   @relation(fields: [teamId], references: [id])

  @@unique([playerId, teamId, contractStartDate, contractEndDate])
}